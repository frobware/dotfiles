{{ if (and (eq .chezmoi.os "darwin" "linux") (not .transient)) -}}
#!/usr/bin/env bash

set -eufo pipefail

export GO111MODULE=on
export GOPATH=${GOPATH:=$HOME}
export GOPROXY=https://proxy.golang.org,direct

if ! which go >/dev/null 2>&1; then
   echo "go is not installed"
   exit 1
fi
   
{{- $pkgs := list
     "golang.org/x/tools/cmd/goimports@v0.1.4"
     "golang.org/x/tools/gopls@v0.7.0"
     "github.com/go-delve/delve/cmd/dlv@v1.6.1"
     "github.com/mikefarah/yq/v4@v4.9.6" }}

{{ range $idx, $val := $pkgs }}
    go get {{ $val }}
{{ end }}


{{ end -}}
