# -*-shell-script-*-

EMACS_TERM="${TERM:=xterm-256}"

if [[ -f ~/.terminfo/x/xterm-24bits ]]; then
    EMACS_TERM="xterm-24bits"
fi

if [[ "$DISPLAY" == "" ]]; then
    # Can we use muti-tty?
    emacsclient --help | grep "\-\-tty" > /dev/null
    if [[ "$?" == "0" ]]; then
	EMACS_CMD="env TERM=$EMACS_TERM emacsclient -a '' -t"
    else
	EMACS_CMD="env TERM=$EMACS_TERM emacs -nw"
    fi
else
    # otherwise don't wait and open a new frame
    EMACS_CMD="env TERM=$EMACS_TERM emacsclient -n -a '' -c"
fi

# Set the environment variables for the editors
export EDITOR=${EMACS_CMD}
export VISUAL=${EMACS_CMD}
export ALTERNATE_EDITOR=emacs

alias emacs="${EMACS_CMD}"

function vi {
    TERM=xterm-mono emacsclient -t $*
}

function emacs-mono {
    TERM=xterm-mono emacsclient -t $*
}
